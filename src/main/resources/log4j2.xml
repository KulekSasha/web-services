<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info" strict="true" name="AppLogConfig"
               monitorInterval="60">


    <Properties>
        <Property name="logPath">logs</Property>
        <Property name="pattern">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %C{10}:%L - %msg%n
        </Property>

    </Properties>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="${pattern}"/>
        </Appender>

        <Appender type="RollingFile" name="RollingFile"
                  fileName="${logPath}/app.log"
                  filePattern="${logPath}/$${date:yyyy-MM}/app-%d{yyyyMMdd}.log.gz">
            <Layout type="PatternLayout"
                    pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="1MB"/>
            </Policies>
        </Appender>
    </Appenders>


    <Loggers>
        <Logger name="com.nix"
                level="all" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="com.zaxxer.hikari"
                level="error" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="org.dbunit"
                level="error" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="org.hibernate" additivity="false"
                level="error">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="org.springframework.security" additivity="false"
                level="trace">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="org.springframework" additivity="false"
                level="all">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Root level="all">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>